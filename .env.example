###############################################################
# COTH MOBILE MONOREPO - SHARED ENVIRONMENT VARIABLES
###############################################################

# Environment
ENVIRONMENT=development
NODE_ENV=development

# Database (PostgreSQL)
# IMPORTANT: This connects to the SAME database as buela-all
DATABASE_URL="postgresql://admin:admin@localhost:5432/composer_db?schema=public&connect_timeout=300"
DIRECT_DATABASE_URL="postgresql://admin:admin@localhost:5432/composer_db"

# Database Transaction Settings
DATABASE_TRANSACTION_MAX_WAIT=2000
DATABASE_TRANSACTION_TIMEOUT=5000

# API Configuration
API_PORT=3006
API_PREFIX=api/v1
API_PAYLOAD_LIMIT=50mb

# JWT Authentication
JWT_SECRET=your_coth_jwt_secret_change_me
JWT_EXPIRATION=1d
JWT_ACCESS_TOKEN_EXPIRATION=24h
JWT_REFRESH_TOKEN_EXPIRATION=30d
JWT_REFRESH_SECRET=your_coth_refresh_secret_change_me
BCRYPT_SALT=10

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3006/api/v1/auth/google/callback

# GraphQL Configuration
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true
GRAPHQL_QUERY_DEPTH_LIMIT=10
GRAPHQL_MAX_COMPLEXITY=1000

# Service URLs
COTH_API_URL=http://localhost:3006
COTH_MOBILE_APP_URL=exp://localhost:19000
EASYMATE_API_URL=http://localhost:3002

# Rate Limiting
THROTTLE_TTL_IN_MILLISECONDS=60000
THROTTLE_LIMIT=100

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=100

# Redis (Optional - for production caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Monitoring & Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Prisma Logging
PRISMA_LOG_LEVELS=error,warn,info

# Feature Flags
ENABLE_SWAGGER=true

# AWS S3 (Optional - for file storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_S3_BUCKET=
