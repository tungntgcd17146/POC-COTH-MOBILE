###############################################################
# COTH API - ENVIRONMENT CONFIGURATION
###############################################################

# Environment & Runtime
NODE_ENV=development
API_PORT=3006
API_PREFIX=api/v1

# IMPORTANT: Shared Database with EasyMate/Buela
# This API connects to the SAME PostgreSQL database as buela-all
DATABASE_URL="postgresql://admin:admin@localhost:5432/composer_db?schema=public&connect_timeout=300"
DIRECT_DATABASE_URL="postgresql://admin:admin@localhost:5432/composer_db"

# Security & Authentication
JWT_SECRET=change_me_coth_mobile_secret
JWT_ACCESS_TOKEN_EXPIRATION=24h
JWT_REFRESH_TOKEN_EXPIRATION=30d
JWT_REFRESH_SECRET=change_me_coth_mobile_refresh_secret
BCRYPT_SALT=10

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3006/api/v1/auth/google/callback

# API Configuration
API_PAYLOAD_LIMIT=10mb
ENABLE_SWAGGER=true

# Rate Limiting
THROTTLE_TTL_IN_MILLISECONDS=60000
THROTTLE_LIMIT=100

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Prisma ORM
PRISMA_LOG_LEVELS=error,warn,info

# Service URLs
COTH_API_URL=http://localhost:3006
COTH_MOBILE_APP_URL=exp://localhost:19000
EASYMATE_API_URL=http://localhost:3002
